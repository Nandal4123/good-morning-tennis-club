generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Supabase Transaction Mode 연결 풀 최적화
  // connection_limit을 낮춰서 연결 풀 제한 문제 방지
  // Transaction Mode는 최대 15개 연결 허용
}

enum TennisLevel {
  NTRP_2_0
  NTRP_2_5
  NTRP_3_0
  NTRP_3_5
  NTRP_4_0
  NTRP_4_5
  NTRP_5_0
}

enum AttendanceStatus {
  ATTENDED
  ABSENT
}

enum MatchType {
  SINGLES
  DOUBLES
}

enum Team {
  A
  B
}

enum UserRole {
  USER
  ADMIN
}

