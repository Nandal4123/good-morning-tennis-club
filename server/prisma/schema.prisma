generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Supabase Transaction Mode 연결 풀 최적화
  // connection_limit을 낮춰서 연결 풀 제한 문제 방지
  // Transaction Mode는 최대 15개 연결 허용
}

enum TennisLevel {
  NTRP_2_0
  NTRP_2_5
  NTRP_3_0
  NTRP_3_5
  NTRP_4_0
  NTRP_4_5
  NTRP_5_0
}

enum AttendanceStatus {
  ATTENDED
  ABSENT
}

enum MatchType {
  SINGLES
  DOUBLES
}

enum Team {
  A
  B
}

enum UserRole {
  USER
  ADMIN
}

// 멀티 테넌트를 위한 Club 모델
model Club {
  id              String    @id @default(cuid())
  name            String
  subdomain       String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  // 운영 설정(Owner 대시보드에서 관리)
  joinCodeHash       String?
  adminPasswordHash  String?
  trialEndsAt        DateTime?
  plan              String?   // 예: TRIAL / BASIC / PRO (추후 enum으로 전환)

  // 공유/브랜딩(카톡 링크 미리보기 OG 태그)
  shareTitle         String?
  shareDescription   String?
  shareImageUrl      String?   // 절대 URL(https://...) 또는 사이트 경로(/og/ace-club.svg 등)
  
  users           User[]
  sessions        Session[]
  matches         Match[]
  visits          Visit[]
  
  @@map("clubs")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  role            UserRole  @default(USER)
  tennisLevel     TennisLevel @default(NTRP_3_0)
  goals           String?
  languagePref    String    @default("en")
  profileMetadata Json?
  // 멀티 테넌트를 위한 clubId 필드 (마이그레이션 후 필수로 변경)
  clubId          String?   // 마이그레이션 전까지 옵셔널
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  attendances      Attendance[]
  matchParticipants MatchParticipant[]
  feedbacks        Feedback[]
  createdMatches   Match[] @relation("MatchCreator")
  club            Club?     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@map("users")
  // 마이그레이션 후 활성화: @@unique([clubId, email])
  @@index([clubId])
}

model Session {
  id          String   @id @default(cuid())
  date        DateTime
  description String?
  // 멀티 테넌트를 위한 clubId 필드 (마이그레이션 후 필수로 변경)
  clubId      String?   // 마이그레이션 전까지 옵셔널
  createdAt   DateTime @default(now())

  attendances Attendance[]
  club        Club?     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([clubId])
}

model Attendance {
  id        String           @id @default(cuid())
  userId    String
  sessionId String
  date      DateTime         @default(now())
  status    AttendanceStatus @default(ATTENDED)
  createdAt DateTime         @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@index([userId])
  @@index([date])
  @@map("attendances")
}

model Match {
  id        String    @id @default(cuid())
  date      DateTime
  type      MatchType @default(DOUBLES)
  createdAt DateTime  @default(now())
  createdBy String?   // 등록자 ID
  // 멀티 테넌트를 위한 clubId 필드 (마이그레이션 후 필수로 변경)
  clubId    String?   // 마이그레이션 전까지 옵셔널

  participants MatchParticipant[]
  creator      User?   @relation("MatchCreator", fields: [createdBy], references: [id], onDelete: SetNull)
  club        Club?     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@map("matches")
  @@index([clubId])
}

model MatchParticipant {
  id      String @id @default(cuid())
  matchId String
  userId  String
  team    Team
  score   Int    @default(0)

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([matchId, userId])
  @@index([userId])
  @@map("match_participants")
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@map("feedbacks")
}

// 오늘 접속자(고유 방문자) 집계를 위한 방문 로그 (KST 하루 단위로 중복 방지)
model Visit {
  id        String   @id @default(cuid())
  clubId    String
  day       DateTime // 한국 시간 기준 해당 날짜 00:00:00(UTC로 변환된 값)
  visitorId String
  userId    String?
  createdAt DateTime @default(now())

  club Club @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@unique([clubId, day, visitorId])
  @@index([clubId, day])
  @@map("visits")
}

