generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Supabase Transaction Mode 연결 풀 최적화
  // connection_limit을 낮춰서 연결 풀 제한 문제 방지
  // Transaction Mode는 최대 15개 연결 허용
}

enum TennisLevel {
  NTRP_2_0
  NTRP_2_5
  NTRP_3_0
  NTRP_3_5
  NTRP_4_0
  NTRP_4_5
  NTRP_5_0
}

enum AttendanceStatus {
  ATTENDED
  ABSENT
}

enum MatchType {
  SINGLES
  DOUBLES
}

enum Team {
  A
  B
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  role            UserRole  @default(USER)
  tennisLevel     TennisLevel @default(NTRP_3_0)
  goals           String?
  languagePref    String    @default("en")
  profileMetadata Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  attendances      Attendance[]
  matchParticipants MatchParticipant[]
  feedbacks        Feedback[]
  createdMatches   Match[] @relation("MatchCreator")

  @@map("users")
}

model Session {
  id          String   @id @default(cuid())
  date        DateTime
  description String?
  createdAt   DateTime @default(now())

  attendances Attendance[]

  @@map("sessions")
}

model Attendance {
  id        String           @id @default(cuid())
  userId    String
  sessionId String
  date      DateTime         @default(now())
  status    AttendanceStatus @default(ATTENDED)
  createdAt DateTime         @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@index([userId])
  @@index([date])
  @@map("attendances")
}

model Match {
  id        String    @id @default(cuid())
  date      DateTime
  type      MatchType @default(DOUBLES)
  createdAt DateTime  @default(now())
  createdBy String?   // 등록자 ID

  participants MatchParticipant[]
  creator      User?   @relation("MatchCreator", fields: [createdBy], references: [id], onDelete: SetNull)

  @@map("matches")
}

model MatchParticipant {
  id      String @id @default(cuid())
  matchId String
  userId  String
  team    Team
  score   Int    @default(0)

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([matchId, userId])
  @@index([userId])
  @@map("match_participants")
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@map("feedbacks")
}

