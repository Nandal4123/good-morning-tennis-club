model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  role            UserRole  @default(USER)
  tennisLevel     TennisLevel @default(NTRP_3_0)
  goals           String?
  languagePref    String    @default("en")
  profileMetadata Json?
  // 멀티 테넌트 전환을 위한 clubId 필드 (현재는 옵셔널, 전환 시 필수로 변경)
  clubId          String?   // MVP: null, 전환 후: Club ID
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  attendances      Attendance[]
  matchParticipants MatchParticipant[]
  feedbacks        Feedback[]
  createdMatches   Match[] @relation("MatchCreator")
  // 멀티 테넌트 전환 시 활성화
  // club            Club?     @relation(fields: [clubId], references: [id], onDelete: SetNull)

  @@map("users")
  // 멀티 테넌트 전환 시 unique 제약조건 변경
  // @@unique([clubId, email])
  // @@index([clubId])
}

model Session {
  id          String   @id @default(cuid())
  date        DateTime
  description String?
  // 멀티 테넌트 전환을 위한 clubId 필드 (현재는 옵셔널, 전환 시 필수로 변경)
  clubId      String?   // MVP: null, 전환 후: Club ID
  createdAt   DateTime @default(now())

  attendances Attendance[]
  // 멀티 테넌트 전환 시 활성화
  // club        Club?     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@map("sessions")
  // 멀티 테넌트 전환 시 인덱스 추가
  // @@index([clubId])
}

model Attendance {
  id        String           @id @default(cuid())
  userId    String
  sessionId String
  date      DateTime         @default(now())
  status    AttendanceStatus @default(ATTENDED)
  createdAt DateTime         @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@index([userId])
  @@index([date])
  @@map("attendances")
}

model Match {
  id        String    @id @default(cuid())
  date      DateTime
  type      MatchType @default(DOUBLES)
  createdAt DateTime  @default(now())
  createdBy String?   // 등록자 ID
  // 멀티 테넌트 전환을 위한 clubId 필드 (현재는 옵셔널, 전환 시 필수로 변경)
  clubId    String?   // MVP: null, 전환 후: Club ID

  participants MatchParticipant[]
  creator      User?   @relation("MatchCreator", fields: [createdBy], references: [id], onDelete: SetNull)
  // 멀티 테넌트 전환 시 활성화
  // club        Club?     @relation(fields: [clubId], references: [id], onDelete: Cascade)

  @@map("matches")
  // 멀티 테넌트 전환 시 인덱스 추가
  // @@index([clubId])
}

model MatchParticipant {
  id      String @id @default(cuid())
  matchId String
  userId  String
  team    Team
  score   Int    @default(0)

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([matchId, userId])
  @@index([userId])
  @@map("match_participants")
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@map("feedbacks")
}

